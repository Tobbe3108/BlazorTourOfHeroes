@using BlazorTourOfHeroes.Shared
@inject NavigationManager NavigationManager

<div class="flex justify-between items-center max-w-sm mx-auto p-6 bg-white rounded-lg shadow-md m-8">
    <img class="h-12 w-12" src="img/TempUser.png" alt="ChitChat Logo">
    <h4 class="text-xl text-gray-900 leading-tight">@hero.Name</h4>
    <button @onclick="NavigateTo" class="bg-transparent hover:bg-blue-500 text-black font-semibold hover:text-white py-2 px-4 border border-black hover:border-transparent rounded">
        View
    </button>
</div>

@code {
    [Parameter]
    public Hero hero { get; set; }

    private void NavigateTo()
    {
        NavigationManager.NavigateTo("Hero/" + hero.Id);
    }
}